/* pages/pay/index.wxss */
page {
  background-color: rgba(231, 231, 231, 0.507);
  padding-bottom: 70rpx;
}
.user_info_row {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10rpx;
  margin: 0 10rpx 0 10rpx;
  background-color: white;
  border-top-right-radius: 20rpx;
  border-top-left-radius: 20rpx;
}
.user_info_row .user_info {
  flex: 1;
}
.user_info_row .user_info .city_info {
  font-size: xx-small;
  color: rgba(138, 133, 133, 0.986);
}
.user_info_row .user_info .district_info {
  padding: 10rpx 0 10rpx 0;
  font-size: large;
}
.user_info_row .user_info .private_info {
  font-size: xx-small;
  color: rgba(138, 133, 133, 0.986);
  font-weight: bold;
}
.user_info_row .user_info .private_info span {
  font-weight: normal;
  margin-left: 20rpx;
}
.user_info_row .change_address_btn button {
  font-size: 25rpx;
}
.cart_content {
  background-color: #f5f5f5;
}
.cart_content .cart_main {
  padding: 2rpx 10rpx 10rpx 10rpx;
}
.cart_content .cart_main .cart_item {
  display: flex;
  background-color: white;
  border-radius: 10rpx;
  margin: 20rpx;
  padding-right: 20rpx;
}
.cart_content .cart_main .cart_item .cart_img_warp {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f5f5f5;
  margin: 20rpx;
  border-radius: 10rpx;
}
.cart_content .cart_main .cart_item .cart_img_warp image {
  width: 80%;
}
.cart_content .cart_main .cart_item .cart_info_warp {
  flex: 4;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
}
.cart_content .cart_main .cart_item .cart_info_warp navigator .goods_name {
  font-weight: bold;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.cart_content .cart_main .cart_item .cart_info_warp .goods_price_warp {
  display: flex;
  justify-content: space-between;
}
.cart_content .cart_main .cart_item .cart_info_warp .goods_price_warp .goods_price {
  color: #e93b3b;
}
.cart_content .cart_main .cart_item .cart_num_tool {
  display: flex;
}
.cart_content .cart_main .cart_item .cart_num_tool .good_num {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 55rpx;
  height: 65rpx;
  background-color: #f5f5f5;
}
.footer_tool {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  position: fixed;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.9);
  border-top: 1rpx solid #ccc;
  padding: 10rpx;
}
.footer_tool .total_price_warp {
  flex: 5;
  display: flex;
  align-items: center;
}
.footer_tool .total_price_warp .total_price {
  font-size: 30rpx;
}
.footer_tool .total_price_warp .total_price span {
  color: red;
}
.footer_tool .total_price_warp .total_price .total_price_text {
  font-size: 45rpx;
  color: red;
}
.footer_tool .order_pay_warp {
  height: 100%;
  flex: 3;
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer_tool .order_pay_warp .order_pay {
  width: 80%;
  height: 80%;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50rpx;
  background-color: red;
  color: white;
}
